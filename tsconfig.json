{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "nodenext",
    "noImplicitAny": false,
    "removeComments": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "lib": ["es2015"],
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts"]
}
